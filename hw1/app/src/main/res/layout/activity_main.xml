<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/dice"
    android:backgroundTint="#0dff89"
    android:background="#38ff7c">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:onClick="dice_click"
        android:nestedScrollingEnabled="false"
        android:contentDescription="dice"
        android:contextClickable="false"
        android:background="@drawable/white_die_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="6"
        android:text="one = 0\ntwo = 0\nthree = 0\nfour = 0\nfive = 0\nsix = 0"
        android:id="@+id/mytextview"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="true"
        android:onClick="reset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Switch"
        android:id="@+id/colorButton"
        android:layout_alignTop="@+id/mytextview"
        android:layout_alignLeft="@+id/reset"
        android:layout_alignStart="@+id/reset" />

</RelativeLayout>
